{{>layouts/header}}
<table class="table">
    <thead>
    <tr>
        <th scope="col">Id</th>
        <th scope="col">Title</th>
        <th scope="col">Content</th>
    </tr>
    </thead>
    <tbody>
    {{#article}}
    <tr>
        <th>{{id}}</th>
        <td>{{title}}</td>
        <td>{{content}}</td>
    </tr>
    {{/article}}
    </tbody>
</table>
<a href="/Articles/{{article.id}}/edit" class="btn btn-primary">수 정</a>
<a href="/Articles/{{article.id}}/delete" class="btn btn-danger">삭 제</a>
<a href="/Articles">Go to Article List</a>
